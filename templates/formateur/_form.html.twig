<div class="card">
  <div class="card-header">
    <div class="card-title">{{ button_label|default('Save') }} Formateur</div>
  </div>
  <div class="card-body">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
      <div class="row">
        <div class="col-md-12">
          {{ form_widget(form) }}
        </div>
      </div>
      <div class="form-group mt-3">
        <button class="btn btn-primary">
          <i class="fas fa-save"></i> {{ button_label|default('Save') }}
        </button>
      </div>
    {{ form_end(form) }}
  </div>
</div>
