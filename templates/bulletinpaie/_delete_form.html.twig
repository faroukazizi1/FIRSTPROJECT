<form method="post" action="{{ path('app_bulletinpaie_delete', {'id': bulletinpaie.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce bulletin?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bulletinpaie.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer
    </button>
</form>