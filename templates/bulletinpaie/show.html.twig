{% extends 'base.html.twig' %}

{% block title %}Bulletin de Paie{% endblock %}

{% block body %}
    <h1>Détails du Bulletin de Paie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bulletinpaie.id }}</td>
            </tr>
            <tr>
                <th>Employé </th>
                <td>{{ bulletinpaie.employe.nom }}</td>
            </tr>
            <tr>
                <th>Mois</th>
                <td>{{ bulletinpaie.mois }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ bulletinpaie.annee }}</td>
            </tr>
            <tr>
                <th>Salaire Brut</th>
                <td>{{ bulletinpaie.salaireBrut }}</td>
            </tr>
            <tr>
                <th>Déductions</th>
                <td>{{ bulletinpaie.deductions }}</td>
            </tr>
            <tr>
                <th>Salaire Net</th>
                <td>{{ bulletinpaie.salaireNet }}</td>
            </tr>
            <tr>
                <th>Date de Génération</th>
                <td>
                    {{ bulletinpaie.dateGeneration ? bulletinpaie.dateGeneration|date('Y-m-d H:i:s') : '—' }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bulletinpaie_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_bulletinpaie_edit', {'id': bulletinpaie.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('bulletinpaie/_delete_form.html.twig') }}
{% endblock %}
