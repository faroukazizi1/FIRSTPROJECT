{% extends 'BackOffice/base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="page-inner">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <h4 class="card-title">Edit Project: {{ project.titre }}</h4>
              <a href="{{ path('app_project_index') }}" class="btn btn-primary btn-round ms-auto">
                <i class="fa fa-arrow-left"></i>
                Back to list
              </a>
            </div>
          </div>
          <div class="card-body">
            <!-- Edit Project Form -->
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.titre) }}</div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.statut) }}</div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                <div class="text-danger small">{{ form_errors(form.description) }}</div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    {{ form_label(form.date_debut) }}
                    {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.date_debut) }}</div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    {{ form_label(form.date_fin) }}
                    {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.date_fin) }}</div>
                  </div>
                </div>
              </div>
              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
                <a href="{{ path('app_project_index') }}" class="btn btn-danger">Cancel</a>
              </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% if form is defined and not form.vars.valid %}
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        // Highlight form errors
        const errorElements = document.querySelectorAll('.text-danger.small');
        errorElements.forEach(element => {
          if (element.textContent.trim() !== '') {
            element.closest('.form-group').classList.add('has-error');
          }
        });
      });
    </script>
  {% endif %}
{% endblock %}