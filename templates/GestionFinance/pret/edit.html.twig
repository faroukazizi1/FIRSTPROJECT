{% extends 'FrontOffice/front_base.html.twig' %}

{% block title %}Edit Pret{% endblock %}

{% block body %}
    <style>
        body {
            color: #ffffff; /* Changer la couleur du texte principal en blanc */
            background-color: #343a40; /* Fond sombre pour contraster avec le texte blanc */
        }

        h1 {
            color: #ffffff; /* Changer la couleur du titre en blanc */
        }

        a {
            color: #ffffff; /* Couleur des liens en blanc */
            text-decoration: none;
        }

        a:hover {
            color: #5bc0de; /* Couleur des liens au survol */
        }

        .btn {
            background-color: #5bc0de; /* Bouton avec fond bleu clair */
            color: white; /* Texte des boutons en blanc */
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 14px;
        }

        .btn:hover {
            background-color: #46b8da; /* Bouton au survol */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #ffffff; /* Texte des cellules en blanc */
        }

        th {
            background-color: #007bff; /* Couleur d'arrière-plan des en-têtes de tableau */
        }

        tr:nth-child(even) {
            background-color: #2c3e50; /* Couleur des lignes paires */
        }

        tr:nth-child(odd) {
            background-color: #34495e; /* Couleur des lignes impaires */
        }

        tr:hover {
            background-color: #5bc0de; /* Survol des lignes du tableau */
        }
    </style>

    <h1>Edit Pret</h1>

    {{ include('GestionFinance/pret/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_pret_index') }}">back to list</a>
    

    {{ include('GestionFinance/pret/_delete_form.html.twig') }}
{% endblock %}
