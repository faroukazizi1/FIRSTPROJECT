{% extends 'FrontOffice/front_base.html.twig' %}

{% block title %}New Pret{% endblock %}

{% block body %}

    <style>
        body {
            background-color: #343a40;
            color: #ffffff;
        }

        h1 {
            font-size: 24px;
            color: #ffffff;
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        select,
        textarea {
            font-size: 16px;
            padding: 12px 14px;
            height: 48px;
            width: 100%;
            max-width: 600px;
            border-radius: 6px;
            border: 1px solid #ccc;
            margin-bottom: 16px;
            background-color: #ffffff;
            color: #000000;
        }

        input[type="text"]:disabled {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

        label {
            font-size: 14px;
            display: block;
            margin-bottom: 6px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .btn {
            font-size: 14px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 6px;
            border: 1px solid #ccc;
            cursor: pointer;
        }

        a.btn {
            background-color: #ddd;
            color: black;
            border: 1px solid #ccc;
        }

        a.btn:hover {
            background-color: #5bc0de;
            color: #ffffff;
        }

        .btn:active {
            background-color: #46b8da;
        }

        .btn-info {
            background-color: #5bc0de;
            color: white;
            border: none;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn-info:hover,
        .btn-success:hover {
            opacity: 0.9;
        }

        .simulation-result {
            margin-top: 30px;
            background-color: #495057;
            padding: 15px;
            border-radius: 8px;
        }

        .simulation-result h3 {
            margin-bottom: 10px;
            color: #ffc107;
        }

        .simulation-result ul {
            list-style: none;
            padding-left: 0;
        }

        .simulation-result li {
            margin-bottom: 6px;
        }

        a.calendar-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #00bfff;
            text-decoration: underline;
        }

        a.calendar-link:hover {
            color: #66d9ff;
        }

        .user-info {
            background-color: #495057;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>

    <h1>Create new Pret</h1>

    <div class="user-info">
        <p><strong>Utilisateur connect√© - CIN:</strong> {{ cin }}</p>
    </div>

    <a href="{{ path('pret_calendar') }}" target="_blank" class="calendar-link">
        üìÖ Voir le calendrier des pr√™ts
    </a>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {# D√©sactiver le champ CIN car il est automatiquement rempli #}
        <div class="form-group">
            {{ form_label(form.cin) }}
            {{ form_widget(form.cin, {'attr': {'readonly': 'readonly', 'disabled': 'disabled'}}) }}
            {# Ajout d'un champ cach√© pour s'assurer que la valeur est soumise #}
            <input type="hidden" name="{{ form.cin.vars.full_name }}" value="{{ cin }}" />
            {{ form_errors(form.cin) }}
        </div>

        {# Afficher les autres champs normalement #}
        {% for field in form %}
            {% if field.vars.name != 'cin' %}
                <div class="form-group">
                    {{ form_label(field) }}
                    {{ form_widget(field) }}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="btn-container">
            <button type="submit" name="simuler" class="btn btn-info">Simuler mon pr√™t</button>
            <button type="submit" name="submit" class="btn btn-success">Valider</button>
        </div>
    {{ form_end(form, {'render_rest': false}) }}

    {% if simulation %}
        <div class="simulation-result">
            <h3>R√©sultat de la simulation :</h3>
            <ul>
                <li><strong>Montant maximum autoris√© :</strong> {{ simulation.montantMax }} TND</li>
                <li><strong>Taux appliqu√© :</strong> {{ simulation.taux }}%</li>
                <li><strong>Mensualit√© estim√©e :</strong> {{ simulation.mensualite }} TND</li>
                <li><strong>√âligible :</strong> {{ simulation.eligible }}</li>
            </ul>
        </div>
    {% endif %}

    <div class="btn-container">
        <a href="{{ path('app_pret_index') }}" class="btn" style="background-color: #6c757d; color: white;">Back to list</a>
    </div>

{% endblock %}