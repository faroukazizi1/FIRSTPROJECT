{% extends 'base.html.twig' %}

{% block body %}
<style>
    table.table {
        width: 100%;
        table-layout: fixed;
    }
    table.table th, table.table td {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 0.9rem;
        padding: 8px;
    }
    table.table th {
        font-weight: bold;
    }
    td.actions a {
        margin-right: 5px;
    }
    .search-bar {
        margin-bottom: 15px;
    }
    .sort-buttons {
        margin-bottom: 15px;
    }
    .sort-buttons button {
        margin-right: 10px;
    }
    #reponse-table th {
        white-space: normal !important;
        word-wrap: break-word;
        text-overflow: unset !important;
        font-size: 13px;
    }
    .form-button-action {
        gap: 4px;
    }
    .form-button-action .btn {
        padding: 0.25rem 0.4rem;
        font-size: 0.875rem;
    }
    .btn-center {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
</style>

<h1>Liste des Réponses</h1>

<a href="{{ path('app_reponse_statistiques') }}" class="btn btn-secondary" style="margin-bottom: 15px;">
    Voir les statistiques des durées de remboursement
</a>

<!-- CHAMP AJAX DE RECHERCHE -->
<div class="search-bar">
    <div class="input-group mb-3">
        <input type="number" id="search-duree" class="form-control" placeholder="Rechercher par durée de remboursement (mois)">
    </div>
</div>

<div class="sort-buttons">
    <button id="sort-asc" class="btn btn-success">Trier Montant Demandé ↑</button>
    <button id="sort-desc" class="btn btn-warning">Trier Montant Demandé ↓</button>
</div> <!-- ZONE DYNAMIQUE À REMPLACER PAR AJAX -->
<div class="table-responsive" id="reponse-list">
    {% include 'GestionFinance/reponse/_reponse_list.html.twig' with {'reponses': reponses} %}
</div>

<a href="{{ path('app_reponse_new') }}" class="btn btn-primary" style="margin-top: 15px;">Créer une nouvelle réponse</a>

<!-- BOUTON CENTRÉ EN BAS -->
<div class="btn-center">
    <a href="{{ path('app_pret_index') }}" class="btn" style="color: white; background-color: #6c757d;">Consulter pret</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('search-duree');

        searchInput.addEventListener('input', function () {
            const duree = searchInput.value;

            fetch(`{{ path('app_reponse_search_by_duree') }}?duree=${duree}`, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById('reponse-list').innerHTML = html;
            });
        });

        document.getElementById('sort-asc').addEventListener('click', function () {
            fetchSorted('asc');
        });

        document.getElementById('sort-desc').addEventListener('click', function () {
            fetchSorted('desc');
        });

        function fetchSorted(direction) {
            fetch('{{ path('app_reponse_index') }}?sort=montantDemande&direction=' + direction, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById('reponse-list').innerHTML = html;
            })
            .catch(error => {
                console.error('Erreur lors du tri:', error);
            });
        }

        $(document).ready(function () {
            $('#reponse-table').DataTable({
                processing: true,
                serverSide: false,
                order: [[0, 'asc']],
                columnDefs: [
                    {
                        targets: [0, 1, 2, 3, 4, 5, 6, 7, 8],
                        orderable: true
                    }
                ]
            });
        });
    });
</script>

{% endblock %}
