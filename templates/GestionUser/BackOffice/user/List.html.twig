{% extends 'BackOffice/Home.html.twig' %}

{% block title %}
    <title>User List</title>
{% endblock %}

{% block body %}

{{ parent()}}

    
<div class="container">
    <div class="page-inner">
      <div
        class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4"
      >
        <div>
          <h3 class="fw-bold mb-3">Employes List</h3>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
          <a href="#" class="btn btn-label-info btn-round me-2">Manage</a>
          <a href="{{ path('app_user_new')}}" class="btn btn-primary btn-round">Add Employe</a>
        </div>
  </div>

    <div class="container mt-4">
               <!-- Displaying the user table -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>CIN</th>
                                <th>First Name</th>
                                <th>Second Name</th>
                                <th>Sexe</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Phone Number</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.cin }}</td>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.sexe }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.adresse }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.role }}</td>
                                    <td>{{ user.numero }}</td>
                                    <td>
                                      <!-- Delete form with CSRF protection -->
                                            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="POST" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                            
                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm" >
                                                <i class="fas fa-edit"></i> Edit
                                            </a>                
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
